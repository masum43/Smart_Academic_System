<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:padding="10dp"

    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/sas"
        android:id="@+id/logoId"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/whoYouAreId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Who You Are?"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#161515"
        android:padding="5dp"
        android:layout_below="@+id/logoId"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="8dp"
        />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/relId1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/whoYouAreId"
        >

        <RelativeLayout
            android:id="@+id/content_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
           >


            <com.github.bkhezry.searchablespinner.SearchableSpinner
                android:id="@+id/searchable_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:gravity="center_horizontal"
                app:divider_height="0.5dp"
                app:font_name="DroidNaskh-Regular.ttf"
                app:items_divider="@color/gray_400"
                app:no_items_found_text="No Item Found"
                app:reveal_empty_text="Please Select"
                app:reveal_view_background_color="@android:color/holo_blue_light"
                app:search_view_background_color="@android:color/holo_blue_light"
                app:show_borders="true"
                app:spinner_border_color="#e6e6e6"
                app:start_search_tint_color="@android:color/white"

                app:boarder_color="@android:color/holo_blue_light"
                app:borders_size="1dp"
                app:done_search_tint_color="@android:color/white"

                />

        </RelativeLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>



    <Button
        android:id="@+id/okBtnId"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:text="Ok"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/relId1"
        android:background="@drawable/round_bg"
        android:shadowColor="@color/newColorPrimaryDark"
        android:backgroundTint="#D0BB1111"
        android:onClick="okBtn"

        />



</RelativeLayout>