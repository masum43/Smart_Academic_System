<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TeachersHomeActivity"
    android:padding="5dp"
    android:orientation="vertical"
    android:background="#00FFFFFF">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grad"
        android:orientation="vertical"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_date"
                    android:padding="4dp"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"
                    />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="2dp"
                android:weightSum="3"
                android:layout_marginEnd="5dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Class"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    />


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="vertical"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior"
                        android:layout_weight="2"

                        >

                        <androidx.coordinatorlayout.widget.CoordinatorLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >


                        <com.github.bkhezry.searchablespinner.SearchableSpinner
                            android:id="@+id/searchable_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="2dp"
                            android:gravity="center_horizontal"
                            app:divider_height="0.5dp"
                            app:font_name="DroidNaskh-Regular.ttf"
                            app:items_divider="@color/gray_400"
                            app:no_items_found_text="No Item Found"
                            app:reveal_empty_text="Select"
                            app:reveal_view_background_color="@android:color/holo_blue_light"
                            app:search_view_background_color="@android:color/holo_blue_light"
                            app:show_borders="true"
                            app:spinner_border_color="#e6e6e6"

                            app:start_search_tint_color="@android:color/white"
                            app:boarder_color="@android:color/holo_blue_light"
                            app:borders_size="1dp"
                            app:done_search_tint_color="@android:color/white"


                            />


                        </androidx.coordinatorlayout.widget.CoordinatorLayout>

                    </LinearLayout>







            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="2dp"
                android:weightSum="3"
                android:layout_marginEnd="5dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Group"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    />


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    android:layout_weight="2"

                    >

                    <androidx.coordinatorlayout.widget.CoordinatorLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >


                        <com.github.bkhezry.searchablespinner.SearchableSpinner
                            android:id="@+id/searchable_spinner2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="2dp"
                            android:gravity="center_horizontal"
                            app:divider_height="0.5dp"
                            app:font_name="DroidNaskh-Regular.ttf"
                            app:items_divider="@color/gray_400"
                            app:no_items_found_text="No Item Found"
                            app:reveal_empty_text="Select"
                            app:reveal_view_background_color="@android:color/holo_blue_light"
                            app:search_view_background_color="@android:color/holo_blue_light"
                            app:show_borders="true"
                            app:spinner_border_color="#e6e6e6"

                            app:start_search_tint_color="@android:color/white"
                            app:boarder_color="@android:color/holo_blue_light"
                            app:borders_size="1dp"
                            app:done_search_tint_color="@android:color/white"


                            />


                    </androidx.coordinatorlayout.widget.CoordinatorLayout>

                </LinearLayout>







            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="2dp"
                android:weightSum="3"
                android:layout_marginEnd="5dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Shift"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    />


                <LinearLayout

                    android:id="@+id/content_main"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    android:layout_weight="2"

                    >

                    <androidx.coordinatorlayout.widget.CoordinatorLayout
                        android:id="@+id/relId1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >


                        <com.github.bkhezry.searchablespinner.SearchableSpinner
                            android:id="@+id/searchable_spinner3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="2dp"
                            android:gravity="center_horizontal"
                            app:divider_height="0.5dp"
                            app:font_name="DroidNaskh-Regular.ttf"
                            app:items_divider="@color/gray_400"
                            app:no_items_found_text="No Item Found"
                            app:reveal_empty_text="Select"
                            app:reveal_view_background_color="@android:color/holo_blue_light"
                            app:search_view_background_color="@android:color/holo_blue_light"
                            app:show_borders="true"
                            app:spinner_border_color="#e6e6e6"

                            app:start_search_tint_color="@android:color/white"
                            app:boarder_color="@android:color/holo_blue_light"
                            app:borders_size="1dp"
                            app:done_search_tint_color="@android:color/white"


                            />


                    </androidx.coordinatorlayout.widget.CoordinatorLayout>

                </LinearLayout>







            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="2dp"
                android:weightSum="3"
                android:layout_marginEnd="5dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Section"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    />


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    android:layout_weight="2"

                    >

                    <androidx.coordinatorlayout.widget.CoordinatorLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >


                        <com.github.bkhezry.searchablespinner.SearchableSpinner
                            android:id="@+id/searchable_spinner4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="2dp"
                            android:gravity="center_horizontal"
                            app:divider_height="0.5dp"
                            app:font_name="DroidNaskh-Regular.ttf"
                            app:items_divider="@color/gray_400"
                            app:no_items_found_text="No Item Found"
                            app:reveal_empty_text="Select"
                            app:reveal_view_background_color="@android:color/holo_blue_light"
                            app:search_view_background_color="@android:color/holo_blue_light"
                            app:show_borders="true"
                            app:spinner_border_color="#e6e6e6"

                            app:start_search_tint_color="@android:color/white"
                            app:boarder_color="@android:color/holo_blue_light"
                            app:borders_size="1dp"
                            app:done_search_tint_color="@android:color/white"


                            />


                    </androidx.coordinatorlayout.widget.CoordinatorLayout>

                </LinearLayout>







            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:weightSum="5"
            android:background="#1F1D1D"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Student Id"
                android:textSize="12sp"
                android:background="#92C94A"
                android:padding="3dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginRight="2dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Roll"
                android:textSize="12sp"
                android:background="#92C94A"
                android:padding="3dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginRight="2dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Name"
                android:textSize="12sp"
                android:background="#92C94A"
                android:padding="3dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginRight="2dp"
                />


                <ToggleButton
                    android:layout_weight="1"
                    android:id="@+id/toggleButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/toggle_background"
                    android:textOff="All Absent"
                    android:textOn="All Present"
                    android:textAlignment="center"
                    android:layout_marginRight="2dp"
                    android:textAllCaps="false"
                    />



        </LinearLayout>




    </androidx.cardview.widget.CardView>





</LinearLayout>